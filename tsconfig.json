{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@scenes/*": ["src/scenes/*"],
      "@hooks/*": ["src/hooks/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"]
    },
    "types": ["node"] 
  },
  "include": ["src"]
}