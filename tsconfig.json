{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@scenes/*": ["src/scenes/*"],
      "@hooks/*": ["src/hooks/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@routes/*": ["src/routes/*"],
      "@types/*": ["src/types/*"],
    },
    "types": ["node", "three"] 
  },
  "include": ["src"]
}